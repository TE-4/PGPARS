<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>PGPARS</title>
        <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
        <link rel="stylesheet" asp-href-include="~/css/site.css" />
    </head>

    @{
        if (User.Identity.IsAuthenticated)
        {
            <body>
                <div class="sidenav a">
                    <p>Welcome, @User.Identity.Name!</p>
                    <a asp-action="Dashboard" asp-controller="Admin">Admin Dashboard</a>
                    <a asp-action="StudentDirectory" asp-controller="Applicant">Student Directory</a>
                    <a asp-action="Create" asp-controller="Admin">Create Account</a>
                    <a asp-action="Logout" asp-controller="Account">Logout</a>
                    <a asp-action="ApplicantInfo" asp-controller="Applicant">Applicant Info (Testing)</a>
                    <a asp-action="" asp-controller="">Test 2</a>
                    <a asp-action="" asp-controller="">Test 3</a>
                </div>
                @RenderBody()
                <footer class="footer">
                    <div>
                        &copy; 2024 - PGPARS - Magic in Development
                    </div>
                </footer>
            </body>
        }
        else
        {
            <body>
                @RenderBody()
                <footer class="footer">
                    <div>
                        &copy; 2024 - PGPARS - Magic in Development
                    </div>
                </footer>
            </body>
        }
    }
</html>