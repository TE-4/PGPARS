@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "User Directory";
}
<head>
    <link rel="stylesheet" href="~/css/flatly.css">
    
</head>
<div class="main">
    <div class="container-opaque">
        <div class="text-center p-3">
            Site Users
        </div>
    </div>
    <br />
    <div class="container-opaque">
        @if (TempData["UserCreated"] != null)
        {
            <script>
                alert('@TempData["UserCreated"]');
            </script>
        }

        <div class="d-flex justify-content-between align-items-center mb-3">
            <form asp-action="SearchUsers" asp-controller="Account" method="get" class="form-inline">
                <input type="text" name="query" class="form-control mr-2" placeholder="Search Site Users..." />

                <select name="role" class="form-control mr-2">
                    <option value="">Filter by Role</option>
                    <option value="Admin">Admin</option>
                    <option value="Faculty">Faculty</option>
                    <option value="Committee">Committee</option>
                    <option value="Staff">Staff</option>
                </select>

                <button type="submit" class="btn btn-primary">Search</button>
            </form>

        <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Add New User</a>
        <table class="table table-striped table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Email</th>
                    <th>Short Name</th>
                    <th>N-Number</th>
                    <th>Role</th>
                    <th>Full Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>
                        <td>@user.ShortName</td>
                        <td>@user.Nnumber</td>
                        <td>@user.MainRole</td>
                        <td>@user.FirstName @user.LastName</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Account" 
                            asp-route-Id="@user.Id" class="btn btn-secondary">Edit</a>

                            <form asp-action="Delete" asp-controller="Account" asp-route-Id="@user.Id" method="post" style="display:inline;">                            
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                            </form>

                            <a asp-action="Detail" asp-controller="Account" asp-route-Id="@user.Id" class="btn btn-info">Details</a>   
                            <a asp-action="LinkedApplicants" asp-controller="Account" asp-route-Id="@user.Id" class="btn btn-outline-dark">Linked Applicants</a>
                        </td>
                            
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
