@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "User Directory";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/flatly.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="container my-4">
        <div class="container-opaque text-center p-3 mb-4">
            <h1 class="display-4">Site Users</h1>
        </div>

        @if (TempData["UserCreated"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["UserCreated"]
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <form asp-action="SearchUsers" asp-controller="Account" method="get" class="form-inline">
                <input type="text" name="query" class="form-control mr-2" placeholder="Search Site Users..." />
                <select name="role" class="form-control mr-2">
                    <option value="">Filter by Role</option>
                    <option value="Admin">Admin</option>
                    <option value="Faculty">Faculty</option>
                    <option value="Committee">Committee</option>
                    <option value="Staff">Staff</option>
                </select>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
            <a asp-action="Register" asp-controller="Account" class="btn btn-success">Add New User</a>
        </div>

        <!-- User Table -->
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Email</th>
                        <th>Short Name</th>
                        <th>N-Number</th>
                        <th>Role</th>
                        <th>Full Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No users found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.ShortName</td>
                                <td>@user.Nnumber</td>
                                <td>@user.MainRole</td>
                                <td>@user.FirstName @user.LastName</td>
                                <td class="d-flex">
                                    <a asp-action="Edit" asp-controller="Account" asp-route-Id="@user.Id"
                                       class="btn btn-secondary btn-sm mr-2">Edit</a>
                                    <form asp-action="Delete" asp-controller="Account" asp-route-Id="@user.Id"
                                          method="post" class="mr-2" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                    <a asp-action="Detail" asp-controller="Account" asp-route-Id="@user.Id"
                                       class="btn btn-info btn-sm mr-2">Details</a>
                                    <a asp-action="LinkedApplicants" asp-controller="Account" asp-route-Id="@user.Id"
                                       class="btn btn-outline-dark btn-sm">Linked Applicants</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
