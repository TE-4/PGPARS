@model LinkedApplicantsViewModel;


<body>
    <div class="main">
        <div class="container-opaque">
            <div class="text-center text-outline p-3">
                <h2>Linked Applicants</h2>
            </div>
        </div>

        <br />

        <div class="container">
            <div class="card shadow-lg p-4">
                <h3><i class="bi bi-person-circle"></i> <strong>Committee/Faculty:</strong> @Model.User.FirstName @Model.User.LastName</h3>
                <hr />

                @if (Model.LinkedApplicants != null && Model.LinkedApplicants.Any())
                {
                    <div class="table-responsive shadow-sm rounded">
                        <table class="table align-middle text-dark">
                            <thead class="text-uppercase">
                                <tr>
                                    <th><i class="bi bi-card-heading"></i> Name</th>
                                    <th><i class="bi bi-person-badge"></i> N-Number</th>
                                    <th><i class="bi bi-envelope"></i> Email</th>
                                    <th><i class="bi bi-telephone"></i> Phone</th>
                                    <th><i class="bi bi-mortarboard"></i> Mentor</th>
                                    <th><i class="bi bi-eye"></i> Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var applicant in Model.LinkedApplicants)
                                {
                                    <tr>
                                        <td>@applicant.FirstName @applicant.LastName</td>
                                        <td class="text-center">@applicant.Nnumber</td>
                                        <td>@applicant.email</td>
                                        <td>@applicant.Phone</td>
                                        <td>@applicant.Mentor1</td>
                                        <td>
                                            <div class="d-flex justify-content-center gap-3">                                              
                                                <!--Add some function here, details..-->
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning text-center">
                        <i class="bi bi-exclamation-circle"></i> No applicants assigned.
                    </div>
                }
            </div>
        </div>
    </div>
</body>
