        <div class="card shadow-lg p-4 bg-dark text-light" style="">
            <!-- Name -->
            <div class="d-flex align-items-center">
                <i class="bi bi-person-circle" style="font-size: 3rem; margin-right: 15px;"></i>
                <h3 class="mb-0">@Model.FullName</h3>
            </div>
            <hr class="border-light" />
            <!-- Personal Info -->
            <div class="row">
                <div class="col-md-6">
                    <p><strong><i class="bi bi-person-vcard"></i> N-Number:</strong> @Model.Nnumber</p>
                    <p><strong><i class="bi bi-envelope"></i> Email:</strong> @Model.email</p>
                    <p><strong><i class="bi bi-graph-up"></i> Status:</strong> @Model.Status</p>
                </div>
                <div class="col-md-6">
                    <p><strong><i class="bi bi-telephone-fill"></i> Phone Number:</strong> @Model.Phone</p>
                    <p><strong><i class="bi bi-envelope"></i> Advisor Email:</strong> @Model.AdvisorEmail</p>
                </div>
            </div>
            <hr class="border-light" />
            <!-- Course Info -->
            <div class="row">
                <div class="col-md-4">
                    <p><strong><i class="bi bi-trophy"></i> Overall GPA:</strong> @Model.GPAOverall</p>
                </div>
                <div class="col-md-4">
                    <p><strong><i class="bi bi-trophy-fill"></i> Psychology GPA:</strong> @Model.GPAPsych</p>
                </div>
                <div class="col-md-4">
                    <p><strong><i class="bi bi-clipboard-check"></i> Courses Requirements Met:</strong> @Model.Course_Req_Met</p>
                </div>
            </div>
            <hr class="border-light" />
            <!-- Review Info -->
            <div class="row">
                <div class="col-md-4">
                    <p><strong><i class="bi bi-person"></i> Reviewer 1:</strong> *Reviewer 1*</p>
                </div>
                <div class="col-md-4">
                    <p><strong><i class="bi bi-person"></i> Reviewer 2:</strong> *Reviewer 2*</p>
                </div>
                <div class="col-md-4">
                    <p><strong><i class="bi bi-person"></i> Interviewer:</strong> *Interviewer?*</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p><strong><i class="bi bi-check"></i> Decision 1:</strong> @Model.Rev1Decision</p>
                </div>
                <div class="col-md-4">
                    <p><strong><i class="bi bi-check-all"></i> Decision 2:</strong> @Model.Rev2Decision</p>
                </div>
                <div class="col-md-4">
                    <p><strong><i class="bi bi-magic"></i> Final Decison:</strong> *Final Decision*</p>
                </div>
            </div>
            <hr class="border-light" />
            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="ApplicantDirectory" asp-controller="Applicant" class="btn btn-lg btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Back to Directory
                </a>

                <div class="d-flex gap-3">
                    <a asp-action="EditApplicant" asp-controller="Applicant" asp-route-Nnumber="@Model.Nnumber">
                        <button type="button" class="btn btn-lg" style="background-color:royalblue; color: white; border: 2px solid black;">
                            <div class="bi bi-pencil text-outline">&ensp;Edit</div>
                        </button>
                    </a>

                    <form asp-action="DeleteApplicant" asp-controller="Applicant" asp-route-id="@Model.Nnumber" method="post"
                          onsubmit="return confirm('Are you sure you want to delete this applicant?');">
                        <button type="submit" class="btn btn-danger btn-lg" style="color: white; border: 2px solid black;">
                            <div class="bi bi-trash text-outline">&ensp;Delete</div>
                        </button>
                    </form>
                </div>
            </div>
        </div>

