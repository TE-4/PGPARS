                                <option value=5>5</option>
                            </select>
                            <span asp-validation-for="OverallFitQuality" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="ResExpQuality" class="form-label"></label>
                            <select asp-for="ResExpQuality" class="form-control" data-val="false">
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
                                <option value=4>4</option>
                                <option value=5>5</option>
                            </select>
                            <span asp-validation-for="ResExpQuality" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="OverallFitComments" class="form-label"></label>
                            <input asp-for="OverallFitComments" class="form-control" data-val="false" />
                            <span asp-validation-for="OverallFitComments" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="ResumeComment" class="form-label"></label>
                            <input asp-for="ResumeComment" class="form-control" data-val="false" />
                            <span asp-validation-for="ResumeComment" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="DecRec" class="form-label"></label>
                            <select asp-for="DecRec" class="form-control" data-val="false">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="DecRec" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="WritSampQuality" class="form-label"></label>
                            <select asp-for="WritSampQuality" class="form-control" data-val="false">
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
                                <option value=4>4</option>
                                <option value=5>5</option>
                            </select>
                            <span asp-validation-for="WritSampQuality" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="FollowUp" class="form-label"></label>
                            <select asp-for="FollowUp" class="form-control" data-val="false">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="FollowUp" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="WritSampComment" class="form-label"></label>
                            <input asp-for="WritSampComment" class="form-control" data-val="false" />
                            <span asp-validation-for="WritSampComment" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="FinalComments" class="form-label"></label>
                            <input asp-for="FinalComments" class="form-control" data-val="false" />
                            <span asp-validation-for="FinalComments" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>
    </form>
</div>