@model ApplicantEditViewModel

<div class="main">
    <div class="container-opaque">
        <div class="text-center p-2">
            <strong>Edit Applicant</strong>
        </div>
    </div>
    <form asp-action="EditApplicant" asp-controller="Applicant" method="post">
        <div class="grid-container">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-control" data-val="false">
                <option value="">-- Select Status --</option>
                <option value="Committee Review">Committee Review</option>
                <option value="Committee Review Complete">Committee Review Complete</option>
                <option value="Faculty Review">Faculty Review</option>
                <option value="Withdrawn">Withdrawn</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="grid-container">
            <div class="personalInfo">
                <strong style="font-size: 25px">Personal Information</strong>
                <table class="table" style="background-color: rgb(13, 33, 95, 0.7);">
                    <tr>
                        <td>
                            <label asp-for="Nnumber" class="form-label"></label>
                            <input asp-for="Nnumber" class="form-control" />
                            <span asp-validation-for="Nnumber" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="email" class="form-label"></label>
                            <input asp-for="email" class="form-control" data-val="false" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" data-val="false" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Sex" class="form-label"></label>
                            <input asp-for="Sex" class="form-control" data-val="false" />
                            <span asp-validation-for="Sex" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="Race" class="form-label"></label>
                            <input asp-for="Race" class="form-control" data-val="false" />
                            <span asp-validation-for="Race" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="AdvisorEmail" class="form-label"></label>
                            <input asp-for="AdvisorEmail" class="form-control" data-val="false" />
                            <span asp-validation-for="AdvisorEmail" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="reviewInfo">
                <strong style="font-size: 25px">Review Information</strong>
                <table class="table" style="background-color: rgb(13, 33, 95, 0.7);">
                    <tr>
                        <td>
                            <label asp-for="Reviewer1" class="form-label"></label>
                            <input asp-for="Reviewer1" class="form-control" data-val="false" />
                            <span asp-validation-for="Reviewer1" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="Rev1Decision" class="form-label"></label>
                            <select asp-for="Rev1Decision" class="form-control" data-val="false">
                                <option value=true>Yes</option>
                                <option value=false>No</option>
                            </select>
                            <span asp-validation-for="Rev1Decision" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Reviewer2" class="form-label"></label>
                            <input asp-for="Reviewer2" class="form-control" data-val="false" />
                            <span asp-validation-for="Reviewer2" class="text-danger"></span>
                        </td>
                        <td>
                            <label asp-for="Rev2Decision" class="form-label"></label>
                            <select asp-for="Rev2Decision" class="form-control" data-val="false">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="Rev2Decision" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="RevAgree" class="form-label"></label>
                            <select asp-for="RevAgree" class="form-control" data-val="false">
                                <option value="true">Yes</option>
                                <option value="false">No</option>
                            </select>
                            <span asp-validation-for="RevAgree" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="CommitteeReview" class="form-label"></label>
                            <input asp-for="CommitteeReview" class="form-control" data-val="false" />
                            <span asp-validation-for="CommitteeReview" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Mentor1" class="form-label"></label>
                            <input asp-for="Mentor1" class="form-control" data-val="false" />
                            <span asp-validation-for="Mentor1" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Mentor2" class="form-label"></label>
                            <input asp-for="Mentor2" class="form-control" data-val="false" />
                            <span asp-validation-for="Mentor2" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Mentor3" class="form-label"></label>
                            <input asp-for="Mentor3" class="form-control" data-val="false" />
                            <span asp-validation-for="Mentor3" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="SelectMentor" class="form-label"></label>
                            <input asp-for="SelectMentor" class="form-control" data-val="false" />
                            <span asp-validation-for="SelectMentor" class="text-danger"></span>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="courseInfo">
                <strong style="font-size: 25px">Course Information</strong>
                <table class="table" style="background-color: rgb(13, 33, 95, 0.7);">
                    <tr>
                        <td>
                            <label asp-for="GPAOverall" class="form-label"></label>
                            <input asp-for="GPAOverall" class="form-control" type="number" step="0.01" data-val="true" />
                            <span asp-validation-for="GPAOverall" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="GPAPsych" class="form-label"></label>
                            <input asp-for="GPAPsych" class="form-control" type="number" step="0.01" data-val="true" />
                            <span asp-validation-for="GPAPsych" class="text-danger"></span>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label asp-for="Course_Req_Met" class="form-label"></label>
                            <input asp-for="Course_Req_Met" class="form-control" data-val="false" />
                            <span asp-validation-for="Course_Req_Met" class="text-danger"></span>
