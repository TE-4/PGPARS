                        <td>
                            <label asp-for="OverallFitQuality" class="form-label"></label>
                            <select asp-for="OverallFitQuality" class="form-control" data-val="false">
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
