@using Microsoft.IdentityModel.Tokens
@model IEnumerable<PGPARS.Models.Funding>

<div class="main">
    <div class="container-opaque">
        <!-- Title -->
        <div class="text-center p-3">
            <h1 class="display-6 fw-bold text-black">Funding Directory</h1>
        </div>
    </div>
    <div>

        <!-- Search bar -->
        <form asp-action="FundingDirectory" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchQuery" class="form-control" placeholder="Search by Source or Cohort..." value="@ViewData["SearchQuery"]" />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>

        <!-- Add Funding button -->
        <a asp-action="AddFunding" class="btn btn-success mb-3">
            <i class="bi bi-plus-circle"></i>&nbsp;Add New Funding
        </a>

        <!-- No results message -->
        @if (Model == null || !Model.Any())
        {
            if (string.IsNullOrEmpty(ViewData["SearchQuery"]?.ToString()))
            {
                <p class="text-muted">There are no Fundings available at the moment.</p>
            }
            else
            {
                <p class="text-muted">Nothing matches your search criteria.</p>
            }
        }
        else
        {
            <!-- Table -->
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-bordered align-middle text-dark">
                    <thead class="table-primary text-uppercase text-center">
                        <tr>
                            <th>Cohort</th>
                            <th>Source</th>
                            <th>Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var fund in Model)
                        {
                            <tr>
                                <td class="text-center">@fund.Cohort</td>
                                <td class="text-center">@fund.Source</td>
                                <td class="text-center">@fund.Amount</td>

                                <!-- Actions column -->
                                <td>
                                    <a asp-action="EditFunding" asp-route-id="@fund.FundingID" class="btn btn-warning">Edit</a>
                                    <form asp-action="DeleteFunding" asp-route-id="@fund.FundingID" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this funding?');">
                                            Delete
                                        </button>
                                    </form>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

