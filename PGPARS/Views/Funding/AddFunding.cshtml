@model PGPARS.Models.Funding

<div class="main">
        <!-- Title -->
        <div class="text-center p-3">
            <h2 class="display-6 fw-bold text-black">Add New Funding</h2>
        </div>
  

    <!-- Form Container -->
        <form asp-action="AddFunding" method="post">
            <!-- Cohort -->
            <div class="mb-3 text-center">
                <label for="Cohort" class="form-label fw-bold">Cohort</label>
                <select class="form-control w-50 mx-auto" id="Cohort" name="Cohort">
                    <option value="2024">2024</option>
                    <option value="2025">2025</option>
                    <!-- Add more cohorts as needed -->
                </select>
                <span asp-validation-for="Cohort" class="text-danger"></span>
            </div>

            <!-- Funding Type -->
            <div class="mb-3 text-center">
                <label for="FundType" class="form-label fw-bold">Funding Type</label>
                <select class="form-control w-50 mx-auto" id="FundingType" name="FundingType">
                    <option value="GRA">GRA</option>
                    <option value="Tonsfeldt">Tonsfeldt</option>
                    <option value="Grad Scholar">Grad Scholar</option>
                    <option value="JZAG">JZAG</option>
                    <option value="Startup">Startup</option>
                    <!-- Add more fund types as needed -->
                </select>
                <span asp-validation-for="FundingType" class="text-danger"></span>

            </div>

            <!-- Funding Source -->
            <div class="mb-3 text-center">
                <label for="Source" class="form-label fw-bold">Funding Source</label>
                <select class="form-control w-50 mx-auto" id="Source" name="Source">
                    <option value="COAS">COAS</option>
                    <option value="Foundation">Foundation</option>
                    <option value="Graduate School">Graduate School</option>
                    <option value="Jacksonville Zoo">Jacksonville Zoo</option>
                    <option value="Startup">Startup</option>
                    <!-- Add more sources as needed -->
                </select>
                <span asp-validation-for="Source" class="text-danger"></span>

            </div>

            <!-- Amount -->
            <div class="mb-3 text-center">
                <label for="Amount" class="form-label fw-bold">Amount</label>
                <input type="number" class="form-control w-50 mx-auto" id="Amount" name="Amount" required />
            </div>

            <!-- Stipends -->
            <div class="mb-3 text-center">
                <label for="Stipends" class="form-label fw-bold">Stipends</label>
                <input type="number" step="0.01" class="form-control w-50 mx-auto" id="Stipends" name="Stipends" />
            </div>

            <!-- Scholarships -->
            <div class="mb-3 text-center">
                <label for="Scholarships" class="form-label fw-bold">Scholarships</label>
                <input type="number" class="form-control w-50 mx-auto" id="Scholarships" name="Scholarships" />
            </div>

            <!-- Comment -->
            <div class="mb-3 text-center">
                <label for="Comment" class="form-label fw-bold">Comment</label>
                <textarea class="form-control w-50 mx-auto" id="Comment" name="Comment" rows="3"></textarea>
            </div>

            <input type="hidden" asp-for="FundingID" />
            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle"></i> Add Funding
                </button>
            </div>
        </form>
</div>