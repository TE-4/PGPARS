@model PGPARS.Models.Funding

<div class="main">
    <!-- Title -->
    <div class="text-center text-outline p-3">
        <h2 class="display-6 fw-bold">Add New Funding</h2>
    </div>

    <!-- Form -->
    <form asp-action="AddFunding" asp-controller="Funding" method="post">
        <!-- Cohort -->
        <div class="mb-3 text-center">
            <label asp-for="Cohort" class="form-label fw-bold">Cohort</label>
            <select asp-for="Cohort" class="form-control w-50 mx-auto">
                <option value="">Select a cohort</option>
                <option value="2024">2024</option>
                <option value="2025">2025</option>
            </select>
            <span asp-validation-for="Cohort" class="text-danger"></span>
        </div>

        <!-- Funding Type -->
        <div class="mb-3 text-center">
            <label asp-for="FundType" class="form-label fw-bold">Funding Type</label>
            <select asp-for="FundType" class="form-control w-50 mx-auto">
                <option value="">Select a type</option>
                <option value="GRA">GRA</option>
                <option value="Tonsfeldt">Tonsfeldt</option>
                <option value="Grad Scholar">Grad Scholar</option>
                <option value="JZAG">JZAG</option>
                <option value="Startup">Startup</option>
            </select>
            <span asp-validation-for="FundType" class="text-danger"></span>
        </div>

        <!-- Funding Source -->
        <div class="mb-3 text-center">
            <label asp-for="Source" class="form-label fw-bold">Funding Source</label>
            <select asp-for="Source" class="form-control w-50 mx-auto">
                <option value="">Select a source</option>
                <option value="COAS">COAS</option>
                <option value="Foundation">Foundation</option>
                <option value="Graduate School">Graduate School</option>
                <option value="Jacksonville Zoo">Jacksonville Zoo</option>
                <option value="Startup">Startup</option>
            </select>
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>

        <!-- Amount -->
        <div class="mb-3 text-center">
            <label asp-for="Amount" class="form-label fw-bold">Amount</label>
            <input asp-for="Amount" type="number" step="0.01" class="form-control w-50 mx-auto" required />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <!-- Stipends -->
        <div class="mb-3 text-center">
            <label asp-for="Stipends" class="form-label fw-bold">Stipends</label>
            <input asp-for="Stipends" type="number" step="0.01" class="form-control w-50 mx-auto" />
            <span asp-validation-for="Stipends" class="text-danger"></span>
        </div>

        <!-- Number of Awards -->
        <div class="mb-3 text-center">
            <label asp-for="NumberOfAwards" class="form-label fw-bold">Number of Awards</label>
            <input asp-for="NumberOfAwards" type="number" class="form-control w-50 mx-auto" />
            <span asp-validation-for="NumberOfAwards" class="text-danger"></span>
        </div>

        <!-- Scholarship -->
        <div class="mb-3 text-center">
            <label asp-for="Scholarship" class="form-label fw-bold">Scholarship</label>
            <input asp-for="Scholarship" type="number" class="form-control w-50 mx-auto"/>
            <span asp-validation-for="Scholarship" class="text-danger"></span>
        </div>

        <!-- Comment -->
        <div class="mb-3 text-center">
            <label asp-for="Comment" class="form-label fw-bold">Comment</label>
            <textarea asp-for="Comment" class="form-control w-50 mx-auto" rows="3"></textarea>
        </div>

        <!-- Hidden ID -->
        <input type="hidden" asp-for="Id" />

        <!-- Submit & Cancel Buttons -->
        <div class="d-flex justify-content-center gap-2 mt-3">
            <button type="submit" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Add Funding
            </button>
            <a asp-action="FundingDirectory" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
