@model PGPARS.Models.Funding

<div class="main">
    <div class="container-opaque">
        <!-- Title -->
        <div class="text-center p-3">
    <h2>Edit Funding</h2>
        </div>
    </div>
   <div>
    <form asp-action="EditFunding" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Applicant"></label>
            <input asp-for="Applicant" class="form-control" />
            <span asp-validation-for="Applicant" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Comment"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="FundingDirectory" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
