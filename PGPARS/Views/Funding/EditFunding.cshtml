@model PGPARS.Models.Funding

<form asp-action="EditFunding" method="post">
    <!-- Cohort -->
    <div class="mb-3 text-center">
        <label for="Cohort" class="form-label fw-bold">Cohort</label>
        <select class="form-control w-50 mx-auto" id="Cohort" name="Cohort">
            <option value="2024">2024</option>
            <option value="2025">2025</option>
            <!-- Add more cohorts as needed -->
        </select>
        <span asp-validation-for="Cohort" class="text-danger"></span>
    </div>

    <!-- Funding Type -->
    <div class="mb-3 text-center">
        <label asp-for="FundingType" class="form-label fw-bold"></label>
        <select asp-for="FundingType" class="form-control w-50 mx-auto">
            <option value="">-- Select Funding Type --</option>
            <option value="GRA">GRA</option>
            <option value="Startup">Startup</option>
            <!-- Other options -->
        </select>
        <span asp-validation-for="FundingType" class="text-danger"></span>
    </div>

    <!-- Funding Source -->
    <div class="mb-3 text-center">
        <div class="form-group">
            <label asp-for="Source" class="control-label"></label>
            <input asp-for="Source" class="form-control" />
            <span asp-validation-for="Source" class="text-danger"></span>
        </div>
    </div>

    <!-- Amount -->
    <div class="mb-3 text-center">
        <div class="form-group">
            <label asp-for="Amount" class="control-label"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>

    <!-- Stipends -->
    <div class="mb-3 text-center">
        <div class="form-group">
            <label asp-for="Stipends" class="control-label"></label>
            <input asp-for="Stipends" class="form-control" />
            <span asp-validation-for="Stipends" class="text-danger"></span>
        </div>
    </div>

    <!-- Scholarships -->
    <div class="mb-3 text-center">
        <div class="form-group">
        <label asp-for="Scholarships" class="control-label"></label>
        <input asp-for="Scholarships" class="form-control" />
        <span asp-validation-for="Scholarships" class="text-danger"></span>
        </div>
    </div>

    <!-- Comment -->
    <div class="mb-3 text-center">
        <div class="form-group">
            <label asp-for="Comment" class="control-label"></label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="FundingID" />
    <!-- Submit Button -->
    <div class="text-center">
        <button type="submit" class="btn btn-success btn-lg">
            <i class="bi bi-pencil-square"></i> Save Changes
        </button>
        <a asp-action="FundingDirectory" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Cancel
        </a>
    </div>
</form>
