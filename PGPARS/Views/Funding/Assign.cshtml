@model PGPARS.Models.ViewModels.FundingAssignmentViewModel

@if (Model.FundingSourceId != 0)
{
    <h3>Assign Applicant to Funding: @Model.FundingSourceName</h3>

    <div class="mb-3">
        <strong>Remaining Funding Amount:</strong> $@Model.RemainingAmount
    </div>


    <form asp-action="Assign" method="post">
        <input type="hidden" name="fundingId" value="@Model.FundingSourceId" />
        <input type="hidden" name="applicantId" id="applicantId" />
        <input type="hidden" name="amount" id="amount" />

        <div class="form-group">
            <label for="applicantSelect">Select Applicant:</label>
            <select id="applicantSelect" name="applicantId" class="form-control" required>
                <option value="">-- Select an Applicant --</option>
                @foreach (var applicant in Model.Applicants)
                {
                    <option value="@applicant.Id">@applicant.FullName</option>
                }
            </select>
            <span asp-validation-for="ApplicantId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="amount">Funding Amount:</label>
            <input type="number" step="0.01" name="amount" class="form-control" placeholder="Enter allocation amount" required min="0" max="@Model.FundingSource.RemainingAmount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Assign</button>
        <a asp-action="FundingDirectory" class="btn btn-secondary mt-3">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-danger">
        <p>There was an error loading the funding or applicants data. Please try again later.</p>
    </div>
}
